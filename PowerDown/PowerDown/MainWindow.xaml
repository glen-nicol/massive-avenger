<Window x:Class="PowerDown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" 
		WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize" Background="#BF000000"
		>
	<DockPanel   
				VerticalAlignment="Stretch"
				Height="Auto">
		
		
		<Grid DockPanel.Dock="Bottom" Height="30" Background="Gray">
			<Grid.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Close" Command="{Binding CloseCommand}" Click="Close_Clicked"/>
				</ContextMenu>
			</Grid.ContextMenu>
			<Button Grid.Column="1" Grid.Row="1" Click="Button_Click">HEY</Button>
		</Grid>
		<ScrollViewer VerticalScrollBarVisibility="Auto" Cursor="">
			<TextBlock  TextWrapping="Wrap" Foreground="LightGreen" Text="{Binding Path=CurrentPowershell.Output,Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
		</ScrollViewer>
	</DockPanel>
</Window>
